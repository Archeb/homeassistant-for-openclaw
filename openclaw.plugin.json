{
    "id": "homeassistant-for-openclaw",
    "name": "Home Assistant",
    "description": "Home Assistant integration: live sensor context injection, entity control, and logbook access.",
    "version": "0.3.2",
    "skills": [
        "skills/homeassistant"
    ],
    "configSchema": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
            "url": {
                "type": "string",
                "description": "Home Assistant base URL (e.g. http://homeassistant.local:8123)"
            },
            "token": {
                "type": "string",
                "description": "Home Assistant Long-Lived Access Token"
            },
            "context": {
                "type": "object",
                "properties": {
                    "enabled": {
                        "type": "boolean",
                        "default": true
                    },
                    "maxEntities": {
                        "type": "integer",
                        "default": 50
                    },
                    "groupByArea": {
                        "type": "boolean",
                        "default": true
                    }
                }
            },
            "acl": {
                "type": "object",
                "properties": {
                    "blockedEntities": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "default": [],
                        "description": "Glob patterns to hide entities entirely from the agent"
                    },
                    "watchedEntities": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "default": [],
                        "description": "Glob patterns for entities to auto-inject into context. Empty = no auto-injection."
                    },
                    "writableDomains": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "default": [],
                        "description": "Domains the agent can call services on (empty = read-only)"
                    }
                }
            }
        }
    }
}